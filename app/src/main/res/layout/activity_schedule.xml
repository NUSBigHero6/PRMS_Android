<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
tools:context=".schedule.android.ui.ScheduleScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        tools:text="DateofProgram" />
    <EditText
        android:id="@+id/maintain_Date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="yyyy-mm-dd"
        tools:text="Program Date" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProgramName"
        tools:text="Program Name" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_width="match_parent">
    <EditText
        android:id="@+id/maintain_program_text_view"
        android:layout_weight=".85"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="one" />
        <android.support.design.widget.CheckableImageButton
            android:id="@+id/btn_select_program"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight=".15"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProducerName"
        tools:text="Producer Name" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_width="match_parent">

    <EditText
        android:id="@+id/maintain_producer_text_view"
        android:layout_weight=".85"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="none"
        tools:text="one" />

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/btn_select_producer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight=".15"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PresenterName"
        tools:text="Presenter Name" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_width="match_parent">
    <EditText
        android:id="@+id/maintain_presenter_text_view"
        android:layout_height="wrap_content"
        android:layout_weight=".85"
        android:layout_width="0dp"
        tools:text="one" />
        <android.support.design.widget.CheckableImageButton
            android:id="@+id/btn_select_presenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight=".15"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StartTime"
        tools:text="StartTime" />

    <EditText
        android:id="@+id/maintain_starttime_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:text="09:30:00"
        tools:text="09:30:00" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration"
        tools:text="Duration" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_width="match_parent">
    <EditText
        android:id="@+id/maintain_programslot_duration_text_view"
        android:layout_height="wrap_content"
        android:layout_weight=".85"
        android:layout_width="0dp"
        android:inputType="time"
        android:maxLength="8"
        android:text="00:30:00"
        tools:text="00:30:00" />

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/btn_select_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight=".15"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>


</LinearLayout>
